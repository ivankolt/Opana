<Window x:Class="UchPR.DocumentHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История документов" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Фильтр по статусу:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Name="StatusFilterComboBox" Width="150" 
                      SelectionChanged="StatusFilter_SelectionChanged">
                <ComboBoxItem Content="Все документы" IsSelected="True"/>
                <ComboBoxItem Content="Сохранённые"/>
                <ComboBoxItem Content="Принятые"/>
            </ComboBox>

            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox Name="SearchTextBox" Width="200" 
                     TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- Список документов -->
        <DataGrid Grid.Row="1" Name="DocumentsDataGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название документа" Binding="{Binding DocumentName}" Width="200"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding DocumentType}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedDate, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                <DataGridTextColumn Header="Дата изменения" Binding="{Binding ModifiedDate, StringFormat=dd.MM.yyyy HH:mm}" Width="130"/>
                <DataGridTextColumn Header="Размер" Binding="{Binding FileSize}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Name="ViewButton" Content="Просмотреть" 
                    Width="100" Height="30" Margin="5"
                    Click="ViewButton_Click"/>
            <Button Name="DeleteButton" Content="Удалить" 
                    Width="100" Height="30" Margin="5"
                    Click="DeleteButton_Click"/>
            <Button Name="CloseButton" Content="Закрыть" 
                    Width="100" Height="30" Margin="5"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
